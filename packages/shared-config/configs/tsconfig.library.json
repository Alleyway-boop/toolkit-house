{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Library specific */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",

    /* Node.js support */
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.ts"
  ]
}